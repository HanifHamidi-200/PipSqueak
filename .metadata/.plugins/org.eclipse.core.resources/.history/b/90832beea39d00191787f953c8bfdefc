import java.util.Scanner;
import java.util.Random;
import java.io.IOException;

public class HTable {
		
	public static void main(String [] args) {
		Scanner input = new Scanner(System.in);
		Random rnd1=new Random();
		storeName myname = new storeName("Hanif");
		storeFile file1 =  new storeFile("data.txt");
		storeResult result1 =  new storeResult(0,0);
		classMENU mymenu =  new classMENU();
		
		int _mode=1;
		String file_name="C:/A_OldPowersourceServer/file"+_mode+".rtf";
		classBOARD myboard =  new classBOARD();
		storeColumn column1 =  new storeColumn("A",1);
			
		String _count;
		String col1[] = new String[1000];
		String col2[] = new String[1000];

		int nLetter;
		String sLetter;
		int nAnswer;
		String sReply;
		boolean bFound = false;
		int mnTest,mnItem;
		
		myname.Saying();
		do {
			mymenu.fDisplay();
			nAnswer=mymenu.fProcess();
			if(nAnswer<=5) {
				_mode = nAnswer;
				file_name="C:/A_OldPowersourceServer/file"+_mode+".rtf";
				
				column1.fView("TEST"+_mode);
				
				try {
					ReadFile file =  new ReadFile(file_name);
					String[] aryLines;
					
					aryLines=(file.OpenFile());
					_count = file.getCount();
					col1 = file.getCol1();
					col2 = file.getCol2();
				}
				catch(IOException e){
					System.out.println(e.getMessage());
				}
								
			}
			else {		
				switch(nAnswer) {
				case 6:
					myboard.fDisplay(_count,col1,col2);
					break;
				case 7:
					break;
				case 8:
					result1.View();
					break;
				default:
					bFound=true;
					break;
				}
			}
		} while (bFound==false);
	}
	
}
